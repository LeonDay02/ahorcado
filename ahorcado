palabra_secreta = "python"

letras_adivinadas = ""
intentos = 6

print("¡Bienvenido al juego del Ahorcado!")

while intentos > 0:
    fallo = 0
    mostrar = ""

    for letra in palabra_secreta:
        if letra in letras_adivinadas:
            mostrar += letra
        else:
            mostrar += "_"
            fallo += 1

    print("Palabra: " + mostrar)

    if fallo == 0:
        print("¡Felicidades! Adivinaste la palabra: " + palabra_secreta)
        break

    intento = input("Adivina una letra: ")
    if intento in letras_adivinadas:
        print("Ya adivinaste esa letra.")
    else:
        letras_adivinadas += intento
        if intento not in palabra_secreta:
            intentos -= 1
            print("¡Incorrecto!")
            print("Te quedan " + str(intentos) + " intentos.")

    if intentos == 0:
        print("¡Perdiste! La palabra era: " + palabra_secreta)
